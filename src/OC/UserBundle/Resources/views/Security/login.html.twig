{% extends "OCPlatformBundle::layout.html.twig" %}
{% block titre_page %}<h1>Formulaire de connexion</h1>{% endblock %}
{% block ocplatform_body %}

 {% block header %}
<div style="height:60px;"></div>     
{% endblock %}

{# S'il y a une erreur, on l'affiche dans un joli cadre #}
  {% if error %}
    <div class="alert alert-danger">{{ error.message }}</div>
  {% endif %}
  
  
 <div class="container" style="width:800px;">
<div class="row">
<div class="col-xs-12">
	
	<div class="main">
			
		<div class="row">
		<div class="col-xs-12 col-sm-6 col-sm-offset-1">
					
			<h5>Entrez votre login et mot de passe</h5>
			
			<form action="{{ path('login_check') }}" method="post" class="form-horizontal" accept-charset="utf-8">
			    <div class="form-group">
					<div class="col-md-8">
						<label for="username">Login :</label>
				    	<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
				    </div> 	
			    </div> 	
			    <div class="form-group">
					<div class="col-md-8">
						<label for="password">Mot de passe :</label>
				    	<input class="form-control" type="password" id="password" name="_password" value="{{ last_username }}" />
				    </div> 	
			    </div> 	
			    <br />
			    <div class="form-group">
				<div class="col-md-offset-0 col-md-8"><input  class="btn btn-success btn btn-success" type="submit" value="Connexion"/></div>
				</div>
			  </form><br />
			  
			 
				
			
			</form>

			<p class="credits">Développé par <a href="http://www.lucianahembert.com" target="_blank">LH</a>.</p>

		</div>
		</div>
		
	</div>

</div>
</div>
</div>


{% endblock %}